@model IEnumerable<DemoApplication.Models.ExchangeRate>

@{
    ViewBag.Title = "Exchange Rate Calculator";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fromCurrency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.toCurrency)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.rate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.fromCurrency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.toCurrency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.rate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
