@model teamcanada.Models.ui.ReportsUI

@{
    ViewBag.Title = "Toronto Electoral Reports";
}



@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
            </hgroup>
        </div>
    </section>
}    

<h2> Welcome to the Toronto Electoral Database.</h2>
<p>To view all data, use the links along the top menu.</p>
<p>Alternatively select a custom report or build one using the form below.</p>

<h3>Campaign Contributions - Sample Reports</h3>

<ul>
<li>@Html.ActionLink("Report1", "Report1", "ContribReports")</li>
<li>@Html.ActionLink("Report2", "Report2", "ContribReports")</li>
</ul>

<h4>Election Results - Sample Reports</h4>

<ul>
<li>@Html.ActionLink("Report1", "Report1", "VoteReports")</li>
<li>@Html.ActionLink("Report2", "Report2", "VoteReports")</li>
</ul>



@using (Html.BeginForm("Index", "UserReports", FormMethod.Get))
{
    <h4>Select from the following options to generate a report</h4>
    <br />
    <div>
    @Html.Label("Select the Election Type")
    @Html.DropDownList("ElectionType", (IEnumerable<SelectListItem>)ViewBag.ElectionType)
    </div>
    <div>
    @Html.Label("Select the Election Year")
    @Html.DropDownList("ElectionYear", (IEnumerable<SelectListItem>)ViewBag.ElectionYear)
    </div>
    <div>
    @Html.Label("Select the Ward Number")
    @Html.DropDownList("WardNum", (IEnumerable<SelectListItem>)ViewBag.WardNum)
    </div>
    <div>
    @Html.Label("Select the Candidate Surname")
    @Html.DropDownList("CandidateLastName", (IEnumerable<SelectListItem>)ViewBag.CandidateLastName)
    </div>
        <div>
    @Html.Label("Select the type of contribution")
    @Html.DropDownList("ContributionTypeDesc", (IEnumerable<SelectListItem>)ViewBag.ContributionTypeDesc)
    </div>
    
        <br />
    <br />
    
    <input id="Submit1" type="submit" value="submit" />
}
